{
  "name": "Azure Rocket",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "One click deploy git repos to github",
  "homepage_url": "http://azurerocket.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Azure",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
	      "js//jquery/jquery.js",
        "src/inject/inject.js",
        "js/socketio.js",
        "js/modal.js"
      ],
      "css": [
        "modal.css"
      ]
    }
  ]
}
